<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="2"
    android:paddingTop="30dp"
    android:alignmentMode="alignMargins"
    android:background="@color/grey_member"
    style="@style/loginActivityStyle">
     <ImageView android:id="@+id/iv_item_0"
         android:layout_marginLeft="20dp"
         android:layout_height="90dp"
         android:layout_width="90dp"
         android:src="@drawable/icon_membert"
         android:layout_row="0"
         android:layout_rowSpan="2"
         android:layout_column="0" />
     <TextView android:id="@id/tv_name"
         android:textColor="@android:color/black"
         android:layout_row="0"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="30dp"
         android:textSize="@dimen/font_size_18"
         android:layout_column="1" />
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_row="1"
        android:layout_marginTop="14dp"
        android:layout_column="1">
        <ImageView android:id="@+id/iv_item_1"
            android:src="@drawable/icon_fensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <TextView
            android:textColor="@android:color/black"
            android:gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="15dp"
            android:text="申鑫粉丝"  android:textSize="@dimen/font_size_15"/>
    </LinearLayout>


    <RelativeLayout android:layout_row="2"
        android:layout_marginTop="15px"
        android:layout_marginLeft="30dp"
        android:layout_column="0"
        android:layout_width="80dp" android:layout_height="18dp">
        <TextView
            android:id="@id/tv_level"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_14"
            android:gravity="center"
            android:background="@drawable/icon_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_lv"
             android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout android:layout_marginLeft="25dp"
        android:layout_row="2" android:layout_column="1">
        <TextView android:id="@id/tv_number"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2" android:layout_column="1"
            android:text="炫币："  android:textSize="@dimen/font_size_15"/>
        <TextView
            android:id="@id/tv_xuanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/font_size_15"/>
          <Button android:id="@+id/btn_chongzhi"
              android:text="充值"
              android:textSize="@dimen/font_size_13"
              android:textColor="@android:color/white"
              android:layout_marginLeft="20dp"
              android:background="@color/red"
              android:layout_width="60dp"
              android:layout_height="30dp" />
    </LinearLayout>
    <View android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_marginTop="35dp"
        android:layout_gravity="fill_horizontal"
        android:background="@color/divider_w"
        android:layout_height="1dp"
        android:layout_column="0" />
    <ListView android:id="@id/ls_data"
        android:background="@color/white"
        android:divider="@color/divider_w"
        android:dividerHeight="1dp"
        android:layout_row="4" android:layout_columnSpan="2"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>
    <View android:layout_row="5"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="@color/divider_w"
        android:layout_height="1dp"
        android:layout_column="0" />

</GridLayout>