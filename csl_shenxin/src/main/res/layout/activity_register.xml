<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/loginActivityStyle">

    <LinearLayout
        android:id="@id/rl_first"
        style="@style/loginBgStyle">

        <ImageView
            android:id="@id/iv_item_0"
            android:layout_width="45px"
            android:layout_height="@dimen/personal_height"
            android:src="@drawable/icon_tel" />

        <EditText
            android:id="@id/et_tel"
            style="@style/et_style"
            android:hint="@string/msg_tel"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="65px" />


    </LinearLayout>

    <LinearLayout
        android:id="@id/rl_next"
        style="@style/loginBgStyle"
        android:visibility="gone">
        <ImageView
            android:id="@id/iv_item_0"
            android:layout_width="45px"
            android:layout_height="@dimen/personal_height"
            android:src="@drawable/icon_tel" />

        <EditText
            android:id="@id/et_tel"
            style="@style/et_style"
            android:hint="@string/msg_tel_code"
            android:layout_width="260dip"
            android:inputType="number"
            android:maxLength="4" />


        <Button
            android:id="@id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/et_tel"
            android:background="@drawable/shape_btn_login_blue"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_13" />
    </LinearLayout>
</LinearLayout>